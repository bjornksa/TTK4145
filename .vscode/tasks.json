{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build shared library, current file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-shared",
                "-fPIC",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.so"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}
